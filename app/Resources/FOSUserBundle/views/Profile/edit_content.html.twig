{% trans_default_domain 'FOSUserBundle' %}

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
    {#{{ form_widget(form) }}#}
    {#<div>
        <input type="submit" value="{{ 'profile.edit.submit'|trans }}" />
    </div>#}
<style>
    .profile-usermenu ul li.active {
        border-bottom: none;
    }

    .profile-usermenu ul li.active a {
        color: #5b9bd1;
        background-color: #f6f9fb;
        border-left: 2px solid #5b9bd1;
        margin-left: -2px;
    }

</style>
<div class="container" xmlns="http://www.w3.org/1999/html">
    <section style="padding-bottom: 50px; padding-top: 50px;">
        <div class="row">
            <div class="col-md-2">
                <div class="profile-usermenu">
                    <ul class="nav">
                        <li>
                            <a href="{{ path('fos_user_profile_show') }}">
                                <i class="glyphicon glyphicon-home"></i>
                                Mon Profil </a>
                        </li>
                        <li class="active">
                            <a href="{{ path('fos_user_profile_edit') }}">
                                <i class="glyphicon glyphicon-user"></i>
                                Informations personnelles </a>
                        </li>
                        <li>
                            <a href="{{ path('useralladdresses') }}">
                                <i class="glyphicon glyphicon-globe"></i>
                                Mes adresses </a>
                        </li>
                        <li>
                            <a href="{{ path('userallorders') }}">
                                <i class="glyphicon glyphicon-shopping-cart"></i>
                                Mes commandes </a>
                        </li>
                        {% if is_granted('ROLE_DELIVERYMAN') %}
                            <li>
                                <a href="#">
                                    <i class="glyphicon glyphicon-shopping-cart"></i>
                                    Mes livraisons </a>
                            </li>
                        {% endif %}
                        <li>
                            <a href="{{ path('list_favorite') }}">
                                <i class="glyphicon glyphicon-shopping-cart"></i>
                                Favoris </a>
                        </li>

                    </ul>
                </div>
            </div>
            <div class="col-md-10">
                <div class="alert alert-info">
                    <h4>Bonjour {{ app.user.firstname }} {{ app.user.lastname }} </h4>
                    <p>
                        À partir de votre compte, vous pouvez obtenir l'historique de vos commandes et mettre à jour vos informations.
                    </p>
                </div>
                <div class="form-group col-lg-4">
                    <label>Nom </label>
                    {{ form_widget(form.firstname, {'attr' : {'class':'form-control'}}) }}
                </div>
                <div class="form-group col-lg-4">
                    <label>Prenom</label>
                    {{ form_widget(form.lastname, {'attr' : {'class':'form-control'}}) }}
                </div>
                <div class="form-group col-lg-4">
                    <label>Date de naissance</label>
                    {{ form_widget(form.birthday, {'attr' : {'class':'form-control'}}) }}
                </div>
                <div class="form-group col-lg-4">
                    <label>Telephone</label>
                    {{ form_widget(form.phonenumber, {'attr' : {'class':'form-control'}}) }}
                </div>
                <div class="form-group col-lg-4">
                    <label>CIN</label>
                    {{ form_widget(form.cin, {'attr' : {'class':'form-control'}}) }}
                </div>
                <div class="form-group col-lg-4">
                    <label>Email</label>
                    {{ form_widget(form.email, {'attr' : {'class':'form-control'}}) }}
                </div>
                <div class="form-group col-lg-4">
                    <label>Nom d'utilisateur</label>
                    {{ form_widget(form.username, {'attr' : {'class':'form-control'}}) }}
                </div>
                <div class="form-group col-md-8">
                    <h3>Sauvegarder</h3>
                    <br />
                    <label class="col-md-4">Mot de passe actuel :</label>
                    {{ form_widget(form.current_password, {'attr' : {'class':'form-control'}}) }}

                    <br>
                    <button value="{{ 'profile.edit.submit'|trans }}" class="btn btn-success">Modifier mes informations</button>
                </div>


            </div>
        </div>
        <!-- ROW END -->


    </section>
    <!-- SECTION END -->
</div>



{{ form_end(form) }}
