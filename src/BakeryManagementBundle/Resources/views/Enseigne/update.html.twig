    </style>

    <div class="bg-1">
        <div class="container-fluid" >
            <div class="text-center"> <h3>Modifier coordonn√©es</h3></div>
            {#<p class="text-center">Lorem ipsum we'll play you some music.<br> Remember to book your tickets!</p>#}

            {{ form_start(form) }}
            <div class="form-group">

                <label for="pwd" class=" control-label">Nom:</label>

                {{ form_widget(form.name,{'attr':{'class':'form-control','placeholder':"Name"}}  ) }}
                <label for="pwd" class=" control-label">Local:</label>
                {{ form_widget(form.address,{'attr':{'class':'form-control','placeholder':"Adresse"}}  ) }}
                <label for="pwd" class=" control-label">Phone</label>
                {{ form_widget(form.phoneNumber,{'attr':{'class':'form-control','placeholder':"+216 00 000 000"}}  ) }}
                <label for="pwd" class=" control-label">Fax</label>
                {{ form_widget(form.fax,{'attr':{'class':'form-control','placeholder':"+216 00 000 000"}}  ) }}
                <label for="pwd" class=" control-label">Email</label>
                {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':"aza@aaza.com"}}  ) }}
                <label for="pwd" class=" control-label">Website</label>
                {{ form_widget(form.website,{'attr':{'class':'form-control','placeholder':"site web"}}  ) }}
                <label for="pwd" class=" control-label">Description</label>
                {{ form_widget(form.description,{'attr':{'class':'form-control','placeholder':"site web"}}  ) }}

                <label for="pwd" class=" control-label">Logo</label>
                {{ form_widget(form.logo,{'attr':{'class':'form-control','placeholder':"+"}}  ) }}
                <label for="pwd" class=" control-label">Code Registre De Commerce</label>
                {{ form_widget(form.codeRC,{'attr':{'class':'form-control','placeholder':""}}  ) }}
                <br>{{ form_widget(form.Ajouter,{'attr':{'class':'btn btn-primary btn-block'}}  ) }}

            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

