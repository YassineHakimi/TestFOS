{% extends 'BackOfficeBundle:DeliveryMan:base.html.twig' %}
{% block title %}Commandes{% endblock %}
{% block content %}




    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th>Client</th>
            <th>Adresse</th>
            <th>Prix</th>
            <th>Prix total</th>
            <th>Client</th>
            <th>Date commande</th>
            <th>Paiement</th>
            <th>Livraison</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <th>Nom du produit</th>
            <th>Quantit√©</th>
            <th>Prix</th>
            <th>Prix total</th>
            <th>Client</th>
            <th>Date commande</th>
            <th>Paiement</th>
            <th>Livraison</th>

        </tr>
        </tfoot>
        <tbody>
        {% for planning in plannings %}
        {% if planning.lineorder is not null %}

            <tr>
                <td>{{ planning.lineorder.order.adresse.nom }} {{ planning.lineorder.order.adresse.prenom }}</td>
                <td>{{ planning.lineorder.order.adresse.adresse }}, {{ planning.lineorder.order.adresse.cp }},{{ planning.lineorder.order.adresse.complement }} </td>
                <td>{{ planning.lineorder.order.adresse.ville }} </td>
                <td>{{ planning.lineorder.order.adresse.telephone }} </td>
                <td>{{ planning.dateStart|date('Y-m-d H:i') }} </td>
                <td>{{ planning.dateStart|date('Y-m-d H:i') }} </td>
                <td>{{ planning.lineorder.product.price * planning.lineorder.qte }} DT</td>
                <td>{{ planning.lineorder.product.bakery.name }}, {{ planning.lineorder.product.bakery.address }} </td>

            </tr>
        {% endif %}

        {% endfor %}
        </tbody>
    </table>


{% endblock %}
{% block scripts %}
    {{ parent() }}
    <script src="{{ asset('bower_components/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>

    <!-- page script -->
    <script>
        $(function () {
            $('#example').DataTable()

        })
    </script>
{% endblock %}