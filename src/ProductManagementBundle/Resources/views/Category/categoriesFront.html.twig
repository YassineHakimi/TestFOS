{% extends '::base.html.twig' %}
{% block title %}Categories{% endblock %}
{% block content %}
{#<div class="loader"></div>#}
<div class="page-wrap">
    <div class="ps-section--hero"><img src="{{ asset('Front/images/hero/03.jpg') }}" alt="">
        <div class="ps-section__content text-center">
            <h3 class="ps-section__title">Notre Catalogue</h3>
            <div class="ps-breadcrumb">
                <ol class="breadcrumb">
                    <li><a href="{{ path('front_homepage') }}">Home</a></li>
                    <li class="active">Notre Catalogue</li>
                </ol>
            </div>
        </div>
    </div>
    <section class="ps-section pt-80 pb-40">
        <div class="container">
            <!-- Cat -->
            {% for category in categories %}
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                    <div class="ps-section__header mb-50">
                        <h3 class="ps-section__title ps-section__title--left">{{ category.name }}</h3>
                    </div>
                    <div class="ps-section__content">
                        {% for subcategory in subcategories %}
                            {% if subcategory.category.name == category.name %}
                        <div class="ps-product--list">
                            <div class="ps-product__thumbnail">
                                <a class="ps-product__overlay" href="{{ path('products_page', {'subcat_id':subcategory.id})}}"></a>
                                <img src="{{ vich_uploader_asset(subcategory, 'imageFile') }}" alt=""></div>
                            <div class="ps-product__content">
                                <h4 class="ps-product__title"><a href="#">{{ subcategory.name }}</a></h4>
                                {% if is_granted('ROLE_USER') == true %}
                                </p><a class="ps-btn ps-btn--xs" href="{{ path('add_favorite', {'subcategory':subcategory.id}) }}">Ajouter aux favories<i class="fa fa-angle-right"></i></a>
                                {% else %}
                                </p><a class="ps-btn ps-btn--xs" href="{{ path('fos_user_security_login') }}">Ajouter aux favories<i class="fa fa-angle-right"></i></a>
                                {% endif %}
                            </div>
                        </div>
                        {% endif %}
                        {% endfor %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
    <div class="ps-section ps-section--pattern pt-80 pb-80">
        <div class="container">
            <div class="ps-countdown">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                        <img src="{{ asset('Front/images/counter.png')}}" alt="">
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 ">
                        <header class="text-center">
                            <div class="ps-section__top">Hot Deal Today</div>
                            <h4>Vanilla cupcake with red sugar flowers</h4>
                            <p>Only: <span> £1.55 </span></p>
                            <ul class="ps-countdown__time" data-time="April 21, 2018 15:37:25">
                                <!--li <span class="days"></span><p>Days</p>-->
                                <!--li.divider :-->
                                <li><span class="hours"></span>
                                    <p>Hours</p>
                                </li>
                                <li class="divider">:</li>
                                <li><span class="minutes"></span>
                                    <p>minutes</p>
                                </li>
                                <li class="divider">:</li>
                                <li><span class="seconds"></span>
                                    <p>Seconds</p>
                                </li>
                            </ul><a class="ps-btn" href="#">Order Now<i class="fa fa-angle-right"></i></a>
                        </header>
                    </div>
                </div>
            </div>
        </div>
